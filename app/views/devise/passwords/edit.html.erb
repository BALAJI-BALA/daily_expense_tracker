<div class="row" style="width:100% !important; height:100% !important; padding:3%;">
  <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4">
    <div class="col-lg-12 text-center" style="padding-top:5%;">
        <span class="brand"></span>
    </div>
    <!-- <div class="col-lg-12 col-md-12 text-center heading_sign" >
      Sign In
    </div> -->
    
    <div class="col-md-12 col-md-12 text-center">
      <% flash.each do |key, value| %>
        <% if value != "You need to sign in or sign up before continuing."  %>
            <div class="alert alert-danger">
              <a href="#" data-dismiss="alert" class="close">×</a>
              <ul>
                <li>
                  <%= value  %>
                </li>
              </ul>
            </div>
        <% end %>
      <% end %>
    
    </div>
    
    <div class="col-lg-12 col-md-12 border">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>      
        <div class="form-group" >
          <div class="col-lg-12 col-md-12">
            New password
          </div>
          <div class="col-lg-12 col-md-12" style="padding-top:2%">
            <%= f.password_field :password, :class => "form-control", :placeholder => "New password", :id => "new_password" ,autofocus: true , required: :true%>
          </div>
        </div>
        <div class="form-group" >
          <div class="col-lg-12 col-md-12">
            Confirm new password
          </div>
          <div class="col-lg-12 col-md-12" style="padding-top:2%">
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm new password", :id => "new_password" ,autofocus: true , required: :true%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12 col-md-12 text-center" style="padding-top:5%;padding-bottom:5%;">
            <button type="submit" class="btn btn-success form-control" name="submit">Change my password</button>
          </div>
        </div>
      <% end %>
       
    </div>
    <div class="col-lg-12 col-md-12 create_link_box" >
        <div class="col-lg-12 col-md-12 text-center">
           <span>Don’t have an account?</span>&nbsp;<%= link_to "Create an account", new_registration_path(resource_name) %>
        </div>
      </div>
  </div>
</div>
