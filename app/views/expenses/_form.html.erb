<div class="right_col" role="main">
          <div class="">
            <div class="page-title">
            <div class="clearfix"></div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <% if expense.errors.any? %>
                  <div id="error_explanation">
                  <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

                  <ul>
                  <% expense.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                  </ul>
                  </div>
                  <% end %>
                  <div class="x_content">
                    <br />
                    <%= form_with(model: expense, local: true, :html => {:novalidate => true}) do |form| %>
                      <div class="form-group" >
                        <div class="col-lg-12 col-md-12">
                          Date
                        </div>
                        <div class="col-lg-12 col-md-12" style="padding-top:2%">
                          <%= form.date_select :date, :class => "form-control", :placeholder => "Date", :id => "user[email]" ,autofocus: true , required: :true%>
                        </div>
                      </div>
                      <div class="form-group" >
                        <div class="col-lg-12 col-md-12">
                          Item
                        </div>
                        <div class="col-lg-12 col-md-12" style="padding-top:2%">
                          <%= form.text_field :item, :class => "form-control", :placeholder => "Item", :id => "user[email]" ,autofocus: true , required: :true%>
                        </div>
                      </div>
                      <div class="form-group" >
                        <div class="col-lg-12 col-md-12">
                          Method
                        </div>
                        <div class="col-lg-12 col-md-12" style="padding-top:2%">
                          <%= form.text_field :method, :class => "form-control", :placeholder => "Method", :id => "user[email]" ,autofocus: true , required: :true%>
                        </div>
                      </div>
                      <div class="form-group" >
                        <div class="col-lg-12 col-md-12">
                          Amount
                        </div>
                        <div class="col-lg-12 col-md-12" style="padding-top:2%">
                          <%= form.text_field :amount, :class => "form-control", :placeholder => "Amount", :id => "user[email]" ,autofocus: true , required: :true%>
                        </div>
                      </div>
                      <div class="form-group" >
                        <div class="col-lg-12 col-md-12">
                          Category
                        </div>
                        <div class="col-lg-12 col-md-12" style="padding-top:2%">
                          <%= form.collection_select :category_id, Category.all, :id, :name, :prompt => "Select a Category" %>
                          <h5>Either select a category from above list or create a new category</h5>
                          <%= form.text_field :new_category_name %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                          <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                      </div>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
            </div>
            </div>
            </div>