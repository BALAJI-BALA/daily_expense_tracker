      <!-- page content -->
      <div class="right_col" role="main">
        <div class="">

          <div class="clearfix"></div>

          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>List Of Expense</h2>
                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <p class="text-muted font-13 m-b-30">
                    Enter the date to list the expense
                    <%= form_with url: dashboard_summary_path, local: true do |form| %>
                      <div class="form-group" >
                        <div class="col-md-4 col-sm-12 col-xs-12 form-group">
                        <div class="col-lg-12 col-md-12">
                          Enter exact date To find expense 
                        </div>
                          <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                            <input type="text" id="only_date" class="form-control custom_date" name="date_month_year" placeholder="Enter a date">
                              <button type="submit" class="btn btn-success">Search</button>
                        </div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12 form-group">
                          <div class="col-lg-12 col-md-12">
                            Enter exact month To find expense of the month
                          </div>
                          <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                            <input type="text" id="only_month" class="form-control custom_date" name="month_year" placeholder="Enter a month">
                              <button type="submit" class="btn btn-success">Search</button>
                        </div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12 form-group">
                          <div class="col-lg-12 col-md-12">
                            Enter exact year To find expense of the year
                          </div>
                        <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                            <input type="text" id="only_year" class="form-control custom_date" name="year" placeholder="Enter a year">
                              <button type="submit" class="btn btn-success">Search</button>
                        </div>
                        </div>
                      </div>
                      <% end %>
                  </p>
                  <table id="" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Item</th>
                        <th>Method</th>
                        <th>Amount</th>
                        <th>User</th>
                        <th>Category</th>
                      </tr>
                    </thead>

                    <% if @summary.present? %>
                      <tbody>
                        <% @summary.each do |expense| %>
                          <tr>
                            <td><%= expense.date %></td>
                            <td><%= expense.item %></td>
                            <td><%= expense.method %></td>
                            <td><%= expense.amount %></td>
                            <td><%= expense.user.email %></td>
                            <td><%= expense.category.name %></td>
                            <td><%= link_to 'Show', expense %></td>
                            <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
                            <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    <% end %>
                  </table>
                  <% if @total.present? %>
                    <h1>The Total Expense =   <%= @total %></h1>
                  <% end %> 
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
      <!-- /page content -->   
      <script type="text/javascript">
      $(function(){
            // $('.custom_date').datepicker({format: 'yyyy-mm-dd'})  
            $('#only_month').datepicker({
              format: "yyyy-mm",
              startView: "months", 
              minViewMode: "months" 
            });  
            $('#only_year').datepicker({
              format: "yyyy",
              startView: "years", 
              minViewMode: "years"
            });  
            $('#only_date').datepicker({
              format: "yyyy-mm-dd"
            });
          });
      </script>